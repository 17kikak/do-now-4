<p id="notice"><%= notice %></p>

<h1>Songs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Song length</th>
      <th>Album</th>
      <th>Artist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.song_length %></td>
        <td><%= song.album %></td>
        <td><%= song.artist %></td>
        <td><%= link_to 'Show', album_song_path(song.id, song) %></td>
        <td><%= link_to 'Edit', edit_album_song_path(song.id, song) %></td>
        <td><%= link_to 'Destroy', album_song_path(song.id, song), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

